{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .header {
            background-color: #5D5A88;
            color: #fff;
            padding: 20px;
            text-align: center;
            position: relative;
        }

        .header h1 {
            margin: 0;
            font-size: 2.5em;
            font-weight: bold;
        }

        .nav {
            background-color: #5D5A88;
            overflow: hidden;
            display: flex;
            justify-content: center;
        }

        .nav a {
            color: #fff;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-size: 1.2em;
        }

        .nav a:hover {
            background-color: #fff;
            color: #5D5A88;
        }

        .container {
            margin: 20px auto;
            max-width: 800px;
            padding: 20px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .container h2 {
            font-size: 2em;
            margin-bottom: 10px;
            color: #5D5A88;
            text-align: center;
        }

        .container p {
            font-size: 1.2em;
            color: #666;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        label {
            color: #5D5A88;
            font-weight: bold;
        }

        input[type="text"],
        input[type="email"],
        textarea {
            width: calc(100% - 20px);
            padding: 10px;
            border: 1px solid #5D5A88;
            border-radius: 4px;
        }

        button {
            padding: 10px;
            background-color: #5D5A88;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            align-self: center;
            width: 200px;
        }

        button:hover {
            background-color: #48468c;
        }

        .footer {
            background-color: #5D5A88;
            color: #fff;
            padding: 10px;
            text-align: center;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="header">
        <h1>Galerie d'Art</h1>
        <p>Découvrez l'univers artistique unique</p>
    </div>
    <div class="nav">
        <a href="{{ path('gallery') }}">Galerie en ligne</a>
        <a href="{{ path('ecommerce') }}">E-commerce</a>
        <a href="{{ path('blog') }}">Blog</a>
        <a href="{{ path('contact') }}">Contact</a>
        <a href="{{ path('login') }}">Se connecter</a>
    </div>
    <div class="container">
        <h2>Nous contacter</h2>
        <p>Pour toute question, veuillez remplir le formulaire ci-dessous.</p>
        <form action="{{ path('contact') }}" method="post">
            <label for="name">Nom :</label>
            <input type="text" id="name" name="name" required>
            
            <label for="email">Email :</label>
            <input type="email" id="email" name="email" required>
            
            <label for="message">Message :</label>
            <textarea id="message" name="message" rows="6" required></textarea>
            
            <button type="submit">Envoyer</button>
        </form>
    </div>
    <div class="footer">
        <p>&copy; 2024 [Nom de l'Artiste]. Tous droits réservés.</p>
    </div>
{% endblock %}
