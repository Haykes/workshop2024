{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails du Client</h1>

        <div class="card">
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th>ID</th>
                        <td>{{ client.id }}</td>
                    </tr>
                    <tr>
                        <th>Prénom</th>
                        <td>{{ client.firstname }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ client.lastname }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ client.email }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ client.phone }}</td>
                    </tr>
                    <tr>
                        <th>Adresse</th>
                        <td>{{ client.adresse }}</td>
                    </tr>
                    <tr>
                        <th>Complément</th>
                        <td>{{ client.complement }}</td>
                    </tr>
                    <tr>
                        <th>Ville</th>
                        <td>{{ client.town }}</td>
                    </tr>
                    <tr>
                        <th>Code Postal</th>
                        <td>{{ client.postalCode }}</td>
                    </tr>
                    <tr>
                        <th>Créé le</th>
                        <td>{{ client.createdAt ? client.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Mis à jour le</th>
                        <td>{{ client.updatedAt ? client.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                    </tr>
                </table>

                <h2 class="mt-4">Peintures Possédées</h2>
                {% if ventes is empty %}
                    <p>Aucune peinture achetée.</p>
                {% else %}
                    <table class="table">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Image</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Prix</th>
                            <th>Statut</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for vente in ventes %}
                            <tr>
                                <td>{{ vente.peinture.id }}</td>
                                <td>
                                    {% if vente.peinture.mainPhotoUrl %}
                                        <img src="{{ asset('uploads/images/peintures/' ~ vente.peinture.mainPhotoUrl) }}" alt="{{ vente.peinture.title }}" style="max-width: 300px; max-height: 300px;">
                                    {% else %}
                                        N/A
                                    {% endif %}
                                </td>
                                <td>{{ vente.peinture.title }}</td>
                                <td>{{ vente.peinture.description }}</td>
                                <td>{{ vente.amount }}</td>
                                <td>{{ vente.peinture.status.name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}

                <a href="{{ path('admin_dashboard', { entity: 'Client' }) }}" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
