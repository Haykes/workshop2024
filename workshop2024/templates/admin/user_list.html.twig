{% extends '@EasyAdmin/layout.html.twig' %}

{% block content %}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
        }

        .custom-user-list {
            padding: 20px;
            background-color: #f5f5f5;
        }

        .user-list-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            background-color: #666;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            margin-right: 10px;
            font-size: 20px;
        }

        .user-name {
            font-size: 18px;
            color: #333;
        }

        .logout-button .btn-logout {
            background-color: #666;
            color: #fff;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

        .user-list-content {
            padding: 20px;
        }

        .user-list-content h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        .alert.alert-warning {
            background-color: #fff3cd;
            color: #856404;
            padding: 10px;
            border: 1px solid #ffeeba;
            border-radius: 5px;
        }

        .user-list-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .btn.btn-primary {
            background-color: #4b8ef4;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            text-decoration: none;
        }

        .user-count {
            font-size: 14px;
            color: #777;
        }

        .user-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .user-card {
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .user-card-info {
            display: flex;
            flex-direction: column;
        }

        .user-card-name {
            font-size: 18px;
            font-weight: bold;
            color: #333;
        }

        .user-card-email {
            font-size: 14px;
            color: #777;
        }

        .user-card-status .badge {
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
        }

        .badge-success {
            background-color: #28a745;
            color: #fff;
        }

        .badge-warning {
            background-color: #ffc107;
            color: #212529;
        }

        .user-card-actions .btn-edit {
            color: #4b8ef4;
            text-decoration: none;
            font-size: 16px;
        }
    </style>

    <div class="custom-user-list">
        <header class="user-list-header">
            <div class="user-info">
                <div class="user-avatar">{{ app.user.username|first|upper }}</div>
                <div class="user-name">{{ app.user.username }}</div>
            </div>
        </header>
        <div class="user-list-content">
            <h1>Clients</h1>
            <div class="alert alert-warning">
                <strong>Attention !</strong> Des utilisateurs n'ont pas encore validé leur profil
            </div>
            <div class="user-list-actions">
                <a href="{{ path('user_new') }}" class="btn btn-primary">Ajouter un client</a>
                <span class="user-count">{{ users|length }} clients</span>
            </div>
            <div class="user-cards">
                {% for user in users %}
                    <div class="user-card">
                        <div class="user-card-info">
                            <div class="user-card-name">{{ user.username }}</div>
                            <div class="user-card-email">{{ user.email }}</div>
                        </div>
                        <div class="user-card-status">
                            {% if user.isVerified %}
                                <span class="badge badge-success">Vérifié</span>
                            {% else %}
                                <span class="badge badge-warning">En attente</span>
                            {% endif %}
                        </div>
                        <div class="user-card-actions">
                            <a href="{{ path('user_edit', { id: user.id }) }}" class="btn btn-edit"><i class="fa fa-pencil-alt"></i></a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
