{% extends '@EasyAdmin/layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
{% endblock %}
{% block content %}
    <style>body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
        }

        .custom-dashboard {
            padding: 20px;
            background-color: #f5f5f5;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #fff;
            border-bottom: 1px solid #ddd;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .user-name {
            font-size: 18px;
            color: #333;
        }

        .logout-button .btn-logout {
            background-color: #666;
            color: #fff;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
        }

        .dashboard-content {
            padding: 20px;
        }

        .dashboard-content h1 {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .stat-card {
            background-color: #6c63ff;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            flex-direction: column;
            align-items: center;
            color: #fff;
        }

        .stat-card.big {
            grid-column: span 2;
            background-color: #3f3d56;
        }

        .stat-icon img {
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .stat-info {
            text-align: center;
        }

        .stat-info h2 {
            font-size: 18px;
            margin-bottom: 5px;
            color: #fff;
        }

        .stat-info p {
            font-size: 24px;
            font-weight: bold;
            margin: 0;
            color: #fff;
        }</style>
    <div class="custom-dashboard">
        <div class="dashboard-content">
            <h1>Juillet 2024</h1>
            <div class="stats-grid">
                <div class="stat-card big">
                    <div class="stat-info">
                        <h2>Chiffre d'affaire</h2>
                        <p>12 789€</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h2>Nombre de vente</h2>
                        <p>15+</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h2>Acquéreurs</h2>
                        <p>4+</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h2>Taux d'évolution</h2>
                        <p>+11,4%</p>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-info">
                        <h2>Certificats générés</h2>
                        <p>12+</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
